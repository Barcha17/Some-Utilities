    <button class="btn btn-secondary" style="position: fixed; bottom: 20px; right: 60px;" onclick="scrollToBottom()"><i class="fas fa-step-forward fa-rotate-90"></i></button>
</div>
{% block javascripts %}
<script>
var id="{{ id }}";
var el;
window.onload = scrollTo(id);
function scrollTo(section) { el = document.getElementById(section); id = section; el.scrollIntoView(); }
function scrollToTop() { el = document.getElementById(0); el.scrollIntoView(); id=0; }
function scrollToBottom() { el = document.getElementById(2); el.scrollIntoView(); id=2; }
{# function scrollToLast(){ id=id-1; el = document.getElementById(id); if(null == el) { id = id+1; return false; } el.scrollIntoView(); }
function scrollToNext(){ id=id+1; el = document.getElementById(id); if(null == el) { id = id-1; return false; } el.scrollIntoView(); } #}
function scrollToLeft() { window.scrollBy(150, 0); return true; }
function scrollToRight() { window.scrollBy(-150, 0);return true; }
</script>
{% endblock %}
