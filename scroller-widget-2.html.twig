<div style="position: fixed; bottom: 20px; right: 20px;">
    <button class="btn btn-secondary" style="position: fixed; bottom: 100px; right: 60px;" onclick="scrollToTop()"><i class="fas fa-step-backward fa-rotate-90"></i></button>
    <button class="btn btn-secondary" style="position: fixed; bottom: 60px; right: 100px;" onclick="scrollToLeft()"><i class="fas fa-step-backward"></i></button>
